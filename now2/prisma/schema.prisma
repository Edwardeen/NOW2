generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String
  address      String?
  city         String?
  country      String?
  dateofbirth  DateTime?
  familyName   String?
  frontName    String?
  icNumber     Int?
  phoneNumber  String?
  province     String?
  username     String         @unique
  zipCode      Int?
  password     String
  History      History[]
  Transactions Transactions[]
}

model Entity {
  id                        Int            @id @default(autoincrement())
  companyUsername           String         @unique
  picFrontName              String?
  picFamilyName             String?
  picPhoneNumber            String?
  dateofbirth               DateTime?
  companyName               String?
  companyAddress            String?
  companyPhoneNumber        String?
  companyZipCode            Int?
  companyEmail              String?
  companyRegistrationNumber String?
  password                  String
  History                   History[]
  Transactions              Transactions[]
}

model Admin {
  id       Int     @id @default(autoincrement())
  username String? @unique
  password String?
  name     String
}

model Screener {
  id           Int            @id @default(autoincrement())
  username     String?        @unique
  password     String?
  name         String
  email        String
  phoneNumber  String
  History      History[]
  Landfills    Landfills[]
  Transactions Transactions[]
}

model Transformer {
  id           Int            @id @default(autoincrement())
  username     String?        @unique
  password     String?
  name         String
  email        String
  phoneNumber  String
  History      History[]
  Landfills    Landfills[]
  Transactions Transactions[]
}

model landfillArea {
  id        Int         @id @default(autoincrement())
  location  String      @unique
  landfills Landfills[]
}

model Landfills {
  id                  Int            @id @default(autoincrement())
  imageUri            String?
  landfillAddress     String?
  landfillAreaName    String
  landfillName        String         @unique
  landfillPhoneNumber String?
  ScreenerID          Int?
  TransformerID       Int?
  History             History[]
  Screener            Screener?      @relation(fields: [ScreenerID], references: [id])
  Transformer         Transformer?   @relation(fields: [TransformerID], references: [id])
  landfillArea        landfillArea   @relation(fields: [landfillAreaName], references: [location])
  Transactions        Transactions[]
}

model Waqf {
  id              Int            @id @default(autoincrement())
  waqfName        String         @unique
  waqfAddress     String?
  waqfPhoneNumber String?
  imageUrl        String?
  description     String?
  bankNumber      Int?           @unique
  totalRaised     Int?
  CauseOnWaqf     CauseOnWaqf[]
  History         History[]
  Transactions    Transactions[]
}

model WaqfCause {
  id          Int           @id @default(autoincrement())
  waqfCause   String        @unique
  CauseOnWaqf CauseOnWaqf[]
}

model CauseOnWaqf {
  waqfID      Int
  waqfCauseID Int
  waqfCause   WaqfCause @relation(fields: [waqfCauseID], references: [id])
  Waqf        Waqf      @relation(fields: [waqfID], references: [id])

  @@id([waqfID, waqfCauseID])
}

model Transactions {
  id                     Int          @id @default(autoincrement())
  transactionDate        DateTime     @default(now())
  transactionAmount      Float
  transactionType        String
  transactionStatus      String
  transactionDescription String?
  UserID                 Int?
  EntityID               Int?
  transactionDeposited   Boolean      @default(false)
  transactionScreened    Boolean      @default(false)
  transactionTransfered  Boolean      @default(false)
  transactionTransformed Boolean      @default(false)
  totalScreened          Int
  LandfillsID            Int?
  WaqfID                 Int?
  ScreenerID             Int?
  TransformerID          Int?
  Entity                 Entity?      @relation(fields: [EntityID], references: [id])
  Landfills              Landfills?   @relation(fields: [LandfillsID], references: [id])
  Screener               Screener?    @relation(fields: [ScreenerID], references: [id])
  Transformer            Transformer? @relation(fields: [TransformerID], references: [id])
  User                   User?        @relation(fields: [UserID], references: [id])
  Waqf                   Waqf?        @relation(fields: [WaqfID], references: [id])
}

model History {
  id                 Int          @id @default(autoincrement())
  historyDate        DateTime
  historyDescription String?
  UserID             Int?
  WaqfName           String
  LandfillName       String
  EntityID           Int?
  totalTransferred   Int
  ScreenerID         Int?
  TransformerID      Int?
  Entity             Entity?      @relation(fields: [EntityID], references: [id])
  Landfills          Landfills    @relation(fields: [LandfillName], references: [landfillName])
  Screener           Screener?    @relation(fields: [ScreenerID], references: [id])
  Transformer        Transformer? @relation(fields: [TransformerID], references: [id])
  User               User?        @relation(fields: [UserID], references: [id])
  Waqf               Waqf         @relation(fields: [WaqfName], references: [waqfName])
}
